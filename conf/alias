alias en='export LANG=en_US.utf8'
alias jp='export LANG=ja_JP.utf8'
alias jman='man -L ja_JP.utf8'
alias eman='man -L en_US.utf8'
alias gps='git push'
alias gpl='git pull'
alias rm='rm -i'
alias genpass='cat /dev/urandom | tr -dc "0123456789abcdefghijkmnpqrstuvwxyzABCDEFGHIJKLMNPQRSTUVWXYZ" | fold -w 12 | head -n 1'
alias custom="vi $CONF_DIR/custom"
alias zshconfig="vi ~/.zshrc"
alias loadconfig="export FASTLOAD=true && source ~/.zshrc && unset FASTLOAD"
alias omzload="source ~/.zshrc"
alias showcolor="zsh $CONF_DIR/showcolor.sh"
alias sshconfig="vi ~/.ssh/config"
alias vialias="vi ~/.myprofile/conf/alias"
alias viohmyzsh="vi ~/.myprofile/conf/ohmyzsh"
alias vipath="vi ~/.myprofile/conf/path"
alias c="clear"
randstr() { cat /dev/urandom | tr -dc 'A-Za-z0-9' | head -c ${1:-8}; echo; }
alias gld="git pulldefaults"
alias gnb="git newbranch"

fix_wsl2_interop() {
    for i in $(pstree -np -s $$ | grep -o -E '[0-9]+'); do
        if [[ -e "/run/WSL/${i}_interop" ]]; then
            export WSL_INTEROP=/run/WSL/${i}_interop
        fi
    done
}
